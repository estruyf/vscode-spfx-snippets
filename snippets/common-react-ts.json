  "React useContext": {
    "prefix": "spfx-context",
    "body": [
      "import * as React from 'react';",
      "",
      "interface I${1:Custom}ProviderProps { }",
      "",
      "const ${1:Custom}Context = React.createContext<I${1:Custom}ProviderProps | undefined>(undefined);",
      "",
      "const ${1:Custom}Provider: React.FunctionComponent<I${1:Custom}ProviderProps> = ({ children }: React.PropsWithChildren<I${1:Custom}ProviderProps>) => {",
      "  return (",
      "    <${1:Custom}Context.Provider",
      "      value={{}}",
      "    >",
      "      {children}",
      "    </${1:Custom}Context.Provider>",
      "  )",
      "};",
      "",
      "const use${1:Custom}Context = (): I${1:Custom}ProviderProps => {",
      "  const loadFunc = React.useContext(${1:Custom}Context);",
      "",
      "  if (loadFunc === undefined) {",
      "    throw new Error('use${1:Custom}Context must be used within the ${1:Custom}Provider');",
      "  }",
      "",
      "  return loadFunc;",
      "};",
      "",
      "${1:Custom}Context.displayName = '${1:Custom}Context';",
      "${1:Custom}Provider.displayName = '${1:Custom}Provider';",
      "",
      "export { ${1:Custom}Provider, use${1:Custom}Context };"
    ],
    "description": "Blueprint to create a useContext React hook that lets you read and subscribe to context from your component."
  },
  "Custom Hook": {
    "prefix": "spfx-hook",
    "body": [
      "import { useState, useEffect } from 'react';",
      "",
      "export default function ${1:useCustom}(options?: any) {",
      "  const [value, setValue] = useState('');",
      "",
      "  useEffect(() => {",
      "    async function fetchData() {",
      "      setValue('');",
      "    }",
      "",
      "    fetchData();",
      "  }, [options]);",
      "",
      "  return {",
      "    value",
